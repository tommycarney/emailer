<!DOCTYPE html>
<html>
  <head>
    <title>Emailer</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'layouts/navbar' %>
    <%= render 'shared/progress_bar' if @show_progress_bar %>
    <div class="container">
      <%= yield %>
    </div>
    <%= js add_gritter(flash[:notice], title: "Notifications", sticky: false) %>
  </body>
</html>
