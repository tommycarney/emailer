<h1>Editing Campaign</h1>

<% @campaign.errors.each do |error| %>
  <ul>
    <li><%= error%></li>
  </ul>
<% end %>

<%= render 'form', campaign: @campaign %>
<h3>List of variables you can use in your email</h3>
 <ol>
<% @campaign.contacts.first.contact_attributes.all.each do |attribute| %>

  <li>{{<%= attribute.attribute_name %>}}</li>

<% end %>
 </ol>

<%= link_to 'Show', @campaign %> |
<%= link_to 'Back', campaigns_path %>
<%= link_to 'Preview', preview_campaign_path(@campaign) %>
