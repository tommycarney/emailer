<% if @campaign.errors.any? %>
  <% @campaign.errors.full_messages.each do |message| %>
    <%= js add_gritter(message, title: "Errors", sticky: false) %>
  <% end %>
<% end %>
<%= form_tag({action: :import}, multipart: true, class: "dropzone") do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Submit" %>
<% end %>
